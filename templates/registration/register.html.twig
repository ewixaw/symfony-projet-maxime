{% extends 'base.html.twig' %}

{% block title %}Enregistrement{% endblock %}

{% block body %}
<form method="post">
    <div style="width: 50%; font-size: 1.2em;">
        <h1 class="h3 mb-3 font-weight-normal">Se créer un compte</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        <div style="margin-bottom: 1em; width: 50%">
            <div style="margin-bottom: 0.5em;">
                {{ form_row(registrationForm.username, {
                    label: 'Pseudonyme : ',
                    attr: { style: 'width: 16.9em;' }
                }) }}
            </div>
            <div style="margin-bottom: 0.5em;">
                {{ form_row(registrationForm.email, {
                    label: 'Email : ',
                    attr: { style: 'width: 20.8em;' }
                }) }}
            </div>
            <div style="margin-bottom: 0.5em;">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe : ',
                    attr: { style: 'width: 16.7em;' }
                }) }}
            </div>
            <div style="margin-bottom: 0.5em;">
                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Accepter les termes d\'utilisation : '
                }) }}
            </div>
        </div>
        {{ form_end(registrationForm) }}

        <button type="submit" style="width: 50%; font-size: 1.2em; margin-bottom: 0.2em;">
            S'enregistrer
        </button>
        <br>
        <a href="{{ path('app_login') }}" style="font-size: 0.8em; color:black;">Vous avez déjà un compte ? Connectez-vous ici !</a>
    </div>
</form>
{% endblock %}